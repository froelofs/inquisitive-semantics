	year = {2020}}

@article{Elliott:17,
	abstract = {Lahiri (2002) classifies question embedding predicates into two major types, rogative and responsive predicates. Rogative predicates like wonder are only compatible with interrogative complements, while responsive predicates like know are also compatible with declarative complements. There are two main theories of responsive predicates: The question-to-proposition reduction approach holds that responsive predicates semantically always select for propositions and that both declarative and interrogative complements to them denote propositions (Heim 1994; Dayal 1996; Lahiri 2002; Spector & Egr√© 2015). The proposition-to-question reduction approach (Groenendijk and Stokhof 1984; Theiler et al. 2015; Uegaki 2015) assumes that responsive predicates semantically always select for question denotations and declarative complements denote resolved questions. We argue that Predicates of Relevance (PoRs) favour the latter approach.},
